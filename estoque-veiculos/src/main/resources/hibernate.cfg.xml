<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory name="session">
           <!-- CONFIGURAÇÕES DE CONEXÃO COM O BD -->
        
           <property name="hibernate.connection.driver_class">org.postgresql.Driver</property><!-- Defino o driver de conexão com o bd -->
       <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/estoque-veiculos?createDataBaseIfNotExist=true</property>
     <property name="hibernate.connection.username">postgres</property>
    <property name="hibernate.connection.password">ADS8</property>
     <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        
        <!-- HABILITA A EXIBIÇÃO DO SQL GERADO PELO HIBERNATE E FORMATA-O -->
        
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        
        <!-- HABILITA A ATUALIZAÇÃO AUTOMÁTICA DA ESTRUTURA DE TABELAS PELO HIBERNATE -->
        
        <property name="hibernate.hbm2ddl.auto">update</property>
        
        <!-- CONFIGURAÇÕES DO POOL DE CONEXÕES-->
        
        <property name="c3p0.min_size">1</property>
        <property name="c3p0.max_size">20</property>
        <property name="c3p0.timeout">300</property>
        <property name="c3p0.max_statements">80</property>
        <property name="c3p0.idle_test_period">300</property>
        
        <!-- LISTA DE ENTIDADES -->
    <mapping class="br.com.estoque.Model.Entidades.Categorias"/>
    <mapping class="br.com.estoque.Model.Entidades.Estados"/>
    <mapping class="br.com.estoque.Model.Entidades.Cidades"/>
    <mapping class="br.com.estoque.Model.Entidades.Clientes"/>
    <mapping class="br.com.estoque.Model.Entidades.Fornecedores"/>
    <mapping class="br.com.estoque.Model.Entidades.Produtos"/>
    <mapping class="br.com.estoque.Model.Entidades.Vendas"/>
    <mapping class="br.com.estoque.Model.Entidades.ItensVenda"/>
    </session-factory>
</hibernate-configuration>